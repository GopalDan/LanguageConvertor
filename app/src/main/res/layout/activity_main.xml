<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7DA"
    tools:context="com.example.gopal.miwok.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the language you are interested to learn?"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="24sp"/>

<Spinner
    android:id="@+id/spinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="16sp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="6sp"
        android:background="@color/number_catagory_color">
    <TextView
        android:id="@+id/number_activity"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="NUMBERS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="6sp"
        android:background="@color/family_catagory_color">
    <TextView
        android:id="@+id/family_activity"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="FAMILY"
        android:textSize="18sp"
        android:background="?android:attr/selectableItemBackground"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        android:gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="6sp"
        android:background="@color/color_catagory">
    <TextView
        android:id="@+id/colors_activity"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="COLORS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        android:gravity="center"/>
</FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="6sp"
        android:background="@color/phrase_catagory_color">
    <TextView
        android:id="@+id/phrases_activity"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="PHRASES"
        android:textSize="18sp"
        android:background="?android:attr/selectableItemBackground"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingLeft="16dp"
        android:gravity="center"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:src="@drawable/play_icon"
        android:visibility="gone"/>

</LinearLayout>
